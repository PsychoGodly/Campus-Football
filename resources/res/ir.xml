<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
    <FrameLayout android:id="@+id/applovin_native_icon_view" style="@style/SmallIconView">
        <ImageView android:id="@+id/applovin_native_icon_image_view" style="@style/SmallIconView"/>
    </FrameLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/applovin_native_ad_content_linear_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginRight="4dp">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:id="@+id/applovin_native_title_text_view" android:layout_marginBottom="1dp" android:layout_toLeftOf="@+id/applovin_native_options_view" android:layout_alignParentLeft="true" android:paddingEnd="28dp" android:layout_toStartOf="@+id/applovin_native_options_view" android:layout_alignParentStart="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallScrollingTitleTextView"/>
            <FrameLayout android:id="@+id/applovin_native_options_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallAdBadgeTextView"/>
            <TextView android:id="@+id/applovin_native_advertiser_text_view" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallScrollingBodyTextView"/>
        </LinearLayout>
        <TextView android:id="@+id/applovin_native_body_text_view" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallScrollingBodyTextView"/>
    </LinearLayout>
</LinearLayout>
