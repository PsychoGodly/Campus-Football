<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="50dp">
    <FrameLayout style="@style/SmallIconView">
        <FrameLayout android:id="@+id/applovin_native_options_view" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <FrameLayout android:id="@+id/applovin_native_icon_view" style="@style/SmallIconView">
            <ImageView android:id="@+id/applovin_native_icon_image_view" style="@style/SmallIconView"/>
        </FrameLayout>
    </FrameLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/applovin_native_ad_content_linear_layout" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_toLeftOf="@+id/applovin_native_media_content_view" android:layout_alignParentLeft="true" android:layout_toStartOf="@+id/applovin_native_media_content_view" android:layout_alignParentStart="true" android:layout_marginHorizontal="4dp">
            <TextView android:id="@+id/applovin_native_title_text_view" android:layout_height="15dp" android:layout_marginTop="2dp" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallScrollingTitleTextView"/>
            <TextView android:gravity="center" android:id="@+id/applovin_native_advertiser_text_view" android:layout_height="15dp" android:layout_marginTop="2dp" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallScrollingBodyTextView"/>
            <TextView android:gravity="center" android:id="@+id/applovin_native_badge_text_view" android:layout_width="25dp" android:layout_height="15dp" android:layout_marginTop="2dp" android:layout_marginBottom="2dp" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.ExtraSmallAdBadgeTextView"/>
        </LinearLayout>
        <FrameLayout android:id="@+id/applovin_native_media_content_view" android:layout_width="96dp" android:layout_height="match_parent" android:layout_toLeftOf="@+id/applovin_native_cta_button" android:layout_toStartOf="@+id/applovin_native_cta_button"/>
        <Button android:textSize="12sp" android:id="@+id/applovin_native_cta_button" android:background="@color/applovin_sdk_ctaButtonColor" android:layout_width="74dp" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_alignParentEnd="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.CTAButton"/>
    </RelativeLayout>
</LinearLayout>
