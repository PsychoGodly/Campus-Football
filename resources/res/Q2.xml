<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@android:color/white" android:paddingBottom="@dimen/default_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="300dp" android:minHeight="250dp">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/applovin_native_ad_content_linear_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/default_margin" android:layout_toLeftOf="@+id/applovin_native_options_view" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/applovin_native_options_view">
        <FrameLayout android:id="@+id/applovin_native_icon_view" android:layout_marginRight="@dimen/default_margin" android:layout_marginEnd="@dimen/default_margin" style="@style/SmallIconView">
            <ImageView android:id="@+id/applovin_native_icon_image_view" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitCenter" android:adjustViewBounds="true"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="50dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallAdBadgeTextView"/>
                <TextView android:id="@+id/applovin_native_title_text_view" android:paddingEnd="28dp" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallScrollingTitleTextView"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/applovin_native_star_rating_view" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
            <TextView android:id="@+id/applovin_native_advertiser_text_view" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallScrollingBodyTextView"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout android:id="@+id/applovin_native_options_view" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginTop="2dp" android:layout_marginRight="2dp" android:minWidth="20dp" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:layout_marginEnd="2dp" android:layout_alignParentEnd="true"/>
    <TextView android:id="@+id/applovin_native_body_text_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:maxLines="3" android:layout_below="@+id/applovin_native_ad_content_linear_layout" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.SmallVerticalBodyTextSize"/>
    <FrameLayout android:id="@+id/applovin_native_media_content_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_above="@+id/applovin_native_cta_button" android:layout_below="@+id/applovin_native_body_text_view" android:layout_centerHorizontal="true"/>
    <Button android:textSize="15sp" android:id="@+id/applovin_native_cta_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/default_margin" android:singleLine="false" android:layout_alignParentBottom="true" style="@style/com.applovin.mediation.nativeAds.MaxNativeAdView.CTAButton"/>
</RelativeLayout>
